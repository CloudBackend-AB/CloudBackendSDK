<application name="List WP app" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://xcerion.com/directory.xsd" xmlns:fs="http://xcerion.com/folders.xsd" xmlns:ni="http://xcerion.com/noindex.xsd">
  <about publisher="CloudBackend"/>
  <view name="listWP" title="List Waypoints" icon="icon://network/earth_location">
    <panel>
      <grid name="mapComp" selection="row">
        <row match="/atom:feed/atom:entry">
          <column match="atom:title" display="." width="100" label="Name"/>
          <column match="ni:Lat" display="." width="80" label="Latitude"/>
          <column match="ni:Long" display="." width="80" label="Longitude"/>
          <column match="ni:Name" display="." width="80" label="when"/>
        </row>
      </grid>
    </panel>
  </view>
  <process name="listWP process">
    <trigger view="listWP" event="Loaded" step="init"/>
	<step id="1">
	  <!-- ! = read -d parameter from shell -->
      <alias name="dataDoc" value="!"/>
    </step>
    <step id="init">
      <operation name="channel">
        <name>xios</name>
        <title>CloudBackend</title>
        <protocol>XMLFS</protocol>
      </operation>
      <operation name="bind" value="$dataDoc">
        <component name="mapComp" view="listWP" />
      </operation>
    </step>
  </process>
</application>    
