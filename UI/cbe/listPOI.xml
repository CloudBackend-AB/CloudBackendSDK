<application name="List POI app">
  <about publisher="CloudBackend"/>
  <view name="listPOI" title="List POI" icon="icon://network/earth_location">
    <panel>
      <grid name="mapComp" selection="row">
        <row match="/root/row">
          <column match="Text" display="." width="150" label="Name"/>
          <column match="Latitude" display="." width="70" label="Latitude"/>
          <column match="Longitude" display="." width="70" label="Longitude"/>
        </row>
      </grid>
    </panel>
  </view>
  <process name="listPOI process">
    <trigger view="listPOI" event="Loaded" step="init"/>
    <step id="init">
      <operation name="channel">
        <name>xios</name>
        <title>CloudBackend</title>
        <protocol>XMLFS</protocol>
      </operation>
      <operation name="bind" value="xios://POI/list.xml">
        <component name="mapComp" view="listPOI" />
      </operation>
    </step>
  </process>
</application>    
