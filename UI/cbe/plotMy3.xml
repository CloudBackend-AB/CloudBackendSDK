<application name="Plot My3 app">
  <about publisher="CloudBackend"/>
  <view name="plotMy3" title="My3 map" icon="icon://network/earth_location">
    <panel>
      <map name="mapComp" controls="false" position="fast">
        <rule match="root/row">
          <marker lat="{Lat}" lng="{Long}" title="{when}"/>
        </rule>
      </map>
    </panel>
  </view>
  <process name="plotMy3 process">
    <trigger view="plotMy3" event="Loaded" step="init"/>
	<step id="1">
	  <!-- ! = read -d parameter from shell -->
      <alias name="dataDoc" value="!"/>
    </step>
    <step id="init">
      <operation name="channel">
        <name>xios</name>
        <title>CloudBackend</title>
        <protocol>XMLFS</protocol>
      </operation>
      <operation name="bind" value="$dataDoc">
        <component name="mapComp" view="plotMy3" />
      </operation>
    </step>
  </process>
</application>    
