<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<application name="Plot POI app" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://xcerion.com/directory.xsd" xmlns:fs="http://xcerion.com/folders.xsd" xmlns:ni="http://xcerion.com/noindex.xsd">
  <about publisher="CloudBackend"/>
  <view name="plotPOI" title="POI map" icon="icon://network/earth_location">
    <panel>
      <map name="mapComp" controls="false" position="fast">
        <rule match="root/row">
          <marker lat="{Latitude}" lng="{Longitude}" title="{Text}"/>
        </rule>
      </map>
    </panel>
  </view>
  <process name="plotPOI process">
    <trigger view="plotPOI" event="Loaded" step="init"/>
    <step id="init">
      <operation name="channel">
        <name>xios</name>
        <title>CloudBackend</title>
        <protocol>XMLFS</protocol>
      </operation>
      <operation name="bind" value="home://POI/stations.xml">
        <component name="mapComp" view="plotPOI" />
      </operation>
    </step>
  </process>
</application>    
