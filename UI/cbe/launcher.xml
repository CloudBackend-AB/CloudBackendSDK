<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<process name="Application Launcher" description="App Launcher Main Process Code" author="Martin Nilsson">

  <trigger view="Launcher" component="apps" event="Select" step="101"/>

  <step id="101" name="Load/show section">
    <alias name="views" value="#ViewManager#/views"/>
    <operation name="decision">
      <when test="'{$views#/views/view[@href={#Launcher#apps#@path}}'">
        <!-- focus -->
      </when>
      <otherwise>
        <operation name="open" value="{#Launcher#apps#@path}"/>
      </otherwise>
    </operation>
  </step>


</process>
