<?xml version="1.0" encoding="utf-8"?>

<view name="Login" title="App Launcher Login" mode="plain" author="Daniel Arthursson, Anders Weister" created="2019-03-08" revised="2022-01-20" height="328" width="100%" bgcolor="#4066ae" theme="liquid" icon="xios/icons/ie-o/key2.svg">
  <panel type="table" height="100%" style="background-image: url('cbe/cloud.jpg'); background-size: cover;">
    <row>
		<panel name="loginText" type="row" width="100%" height="100" style="margin-top:13px;">
			<image align="left" src="https://cloudbackend.com/assets/logo-white.svg" />
		</panel>
      <panel type="row" width="800" height="250" align="left" valign="middle">
        <panel type="row" height="100%" valign="left">
          <label name="header" align="left" width="100%" height="200" default="CloudBackend data view" font="verdana" size="31" color="#579"/>
          <label name="header2" align="left" width="100%" default="Enter credentials to log in." font="verdana" size="19" color="#aa0" style="margin-bottom: 60px;"/>
          <panel type="column" height="150">
            <panel type="table" name="panelLogin" style="padding-left:70px;" width="415" height="125">
              <row>
                <input name="Username" label="User name" focus="true" labelPos="left" style="padding-left:0px;padding-right:2px;" labelStyle="width:100%;" width="150"/>
              </row>
              <row>
                <input name="Password" label="Password" labelPos="left" style="padding-left:0px;padding-right:2px;" labelStyle="width:100%;" type="password" width="150"/>
              </row>
              <row align="right" colspan="2">
                <panel type="column" width="100%" valign="top" align="right">
                  <button name="Login" text="Login" default="true" width="80" style="margin-top: 5px;"/>
                </panel>
              </row>
            </panel>
            <panel name="panelProgress" type="column" align="left" width="416" style="padding-left:85px; overflow:hidden;" hide="true" label="Logging in..." lstyle="margin-top:30px; padding-left:85px;color:#fff; letter-spacing:1px; font-size:12pt; font-family:tahoma;"/>
          </panel>
        </panel>
      </panel>
    </row>
    <row height="14">
      <label style="text-align:right; margin-right:3px; padding-bottom:4px;" name="Copyright" color="#fff" default="Copyright Â© 2022 XIOS/3 AB, All rights reserved."/>
    </row>
  </panel>
</view>
